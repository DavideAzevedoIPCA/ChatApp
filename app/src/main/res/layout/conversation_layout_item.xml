<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#c7d7f0">

    <ImageView
        android:id="@+id/convLayoutItem_convPhoto_imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/common_google_signin_btn_icon_disabled" />

    <TextView
        android:id="@+id/convLayoutItem_convTitle_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@id/convLayoutItem_convPhoto_imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/convLayoutItem_convPhoto_imageView"
        app:layout_constraintTop_toTopOf="@id/convLayoutItem_convPhoto_imageView" />

    <TextView
        android:id="@+id/convLayoutItem_convText_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:singleLine="true"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/convLayoutItem_convPhoto_imageView"
        app:layout_constraintTop_toBottomOf="@id/convLayoutItem_convTitle_textView" />

</androidx.constraintlayout.widget.ConstraintLayout>